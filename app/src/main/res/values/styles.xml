<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- TabLayout style -->
    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorMovieTitleView</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">@dimen/secondary_horizontal_margin</item>
        <item name="tabPaddingEnd">@dimen/secondary_horizontal_margin</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorWhite</item>
    </style>

    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_secondary</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/colorFontMain</item>
        <item name="colorControlNormal">@color/colorFontMain</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@string/font_sans_serif_medium</item>
        <item name="android:textSize">@dimen/text_secondary_title</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorFontMain</item>
    </style>

    <style name="TitleCollapsed">
        <item name="android:fontFamily">@string/font_sans_serif_medium</item>
        <item name="android:textSize">@dimen/text_secondary_title</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorFontMain</item>
    </style>

    <style name="genreChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">@dimen/text_tertiary</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textStyle">italic</item>
        <item name="android:color">@color/colorFontMain</item>
    </style>

</resources>
