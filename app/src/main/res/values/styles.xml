<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/colorFontMain</item>
        <item name="colorControlNormal">@color/colorFontMain</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@string/font_sans_serif_medium</item>
        <item name="android:textSize">@dimen/text_secondary_title</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorFontMain</item>
    </style>

    <style name="TitleCollapsed">
        <item name="android:fontFamily">@string/font_sans_serif_medium</item>
        <item name="android:textSize">@dimen/text_secondary_title</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorFontMain</item>
    </style>

</resources>
